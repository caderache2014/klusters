<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @kluster.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @kluster.description %>
</p>

<p>
  <strong>Created By:</strong>
  <%= @kluster.user.email %>
</p>

<p>
  <strong>Documents in Kluster</strong>
	<ul>
		<% for doc in KlusterDocument.where(:kluster_id => params[:id]) %>
				<p><%= image_tag doc.document.url(:thumb) %></p>
				<p><%= link_to doc.document_file_name, "#{root_url}#{doc.document.url()}", :target => "_blank"%>
				</p>
		<%end%>
  </ul>
</p>

<%= link_to 'Edit', edit_kluster_path(@kluster) %> |
